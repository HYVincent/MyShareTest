<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_cancel_share"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="@color/lightgrey"
        android:layout_alignParentBottom="true"
        android:text="取消"
        android:textColor="@color/white"
        android:textSize="@dimen/common_text_size_14sp" />

    <LinearLayout
        android:id="@+id/rl_share_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_above="@+id/tv_cancel_share"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_marginTop="@dimen/size_15"
            android:layout_marginLeft="@dimen/size_15"
            android:text="分享到:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/ll_share_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <RelativeLayout
                android:id="@+id/rl_share_qq_friends"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_80"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_share_qq_friends"
                    android:layout_width="@dimen/size_40"
                    android:layout_height="@dimen/size_40"
                    android:layout_centerInParent="true"
                    android:src="@drawable/umeng_socialize_qq" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_share_qq_friends"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:text="QQ好友" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_share_qq_qzone"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_80"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_share_qq_qzone"
                    android:layout_width="@dimen/size_40"
                    android:layout_height="@dimen/size_40"
                    android:layout_centerInParent="true"
                    android:src="@drawable/umeng_socialize_qzone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_share_qq_qzone"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:text="QQ空间" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_share_weixin_friend"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_80"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_share_menu_weixin"
                    android:layout_width="@dimen/size_40"
                    android:layout_height="@dimen/size_40"
                    android:layout_centerInParent="true"
                    android:src="@drawable/umeng_socialize_wechat" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_share_menu_weixin"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:text="微信好友" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_share_weixin_circle_of_friends"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_80"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_share_wx_friend"
                    android:layout_width="@dimen/size_40"
                    android:layout_height="@dimen/size_40"
                    android:layout_centerInParent="true"
                    android:src="@drawable/umeng_socialize_wxcircle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_share_wx_friend"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:text="微信朋友圈" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_80"
            android:gravity="center_vertical"
            android:weightSum="4"
            android:layout_marginBottom="@dimen/size_15">

            <RelativeLayout
                android:id="@+id/rl_share_weixin_collect"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_share_wx_collect"
                    android:layout_width="@dimen/size_40"
                    android:layout_height="@dimen/size_40"
                    android:layout_centerInParent="true"
                    android:src="@drawable/umeng_socialize_fav" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_share_wx_collect"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:text="微信收藏" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_share_sina"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_share_sina"
                    android:layout_width="@dimen/size_40"
                    android:layout_height="@dimen/size_40"
                    android:layout_centerInParent="true"
                    android:src="@drawable/umeng_socialize_sina" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_share_sina"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:text="新浪微博" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>



    <TextView
        android:id="@+id/tv_other"
        android:layout_above="@id/rl_share_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>